<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/mainRecycler"
        android:layout_width="match_parent"
        android:layout_height="593dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="48dp">

    </android.support.v7.widget.RecyclerView>

    <android.support.v7.widget.CardView
        android:id="@+id/searchLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:clickable="true"
        app:cardCornerRadius="10dp"
        app:cardElevation="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/searchBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/beatmapFilterButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:backgroundTint="#FFFFFF"
                    android:scaleType="centerCrop"
                    android:tint="#737373"
                    app:srcCompat="@drawable/filter" />

                <ImageButton
                    android:id="@+id/refresh"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:backgroundTint="#FFFFFF"
                    android:scaleType="centerCrop"
                    android:tint="#737373"
                    app:srcCompat="@drawable/refresh" />

                <SearchView
                    android:id="@+id/search_beatmap"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="37dp">

                </SearchView>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/beatmapFilterLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/searchBar"
                android:padding="10dp"
                android:visibility="gone">


                <TextView
                    android:id="@+id/rankedStates"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:text="状态" />

                <TableLayout
                    android:id="@+id/rankedClassTable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/rankedStates"
                    android:layout_below="@+id/rankedStates"
                    android:layout_marginLeft="-5dp">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <CheckBox
                            android:id="@+id/ranked"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:text="@string/rankedAndApproved" />

                        <CheckBox
                            android:id="@+id/qualified"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:text="Qualified" />

                        <CheckBox
                            android:id="@+id/loved"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:text="Loved" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <CheckBox
                            android:id="@+id/pending"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:text="@string/PendingAndWIP" />

                        <CheckBox
                            android:id="@+id/graveyard"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:text="Graveyard" />
                    </TableRow>
                </TableLayout>

                <TextView
                    android:id="@+id/modeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@id/rankedStates"
                    android:layout_below="@id/rankedClassTable"
                    android:text="模式" />

                <TableLayout
                    android:id="@+id/modesTable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/rankedClassTable"
                    android:layout_alignParentStart="true"
                    android:layout_below="@id/modeText"
                    android:layout_marginLeft="-5dp">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <CheckBox
                            android:id="@+id/std"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:text="STD" />

                        <CheckBox
                            android:id="@+id/taiko"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:text="Taiko" />

                        <CheckBox
                            android:id="@+id/ctb"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:text="CTB" />

                        <CheckBox
                            android:id="@+id/mania"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:text="Mania" />
                    </TableRow>
                </TableLayout>

                <TextView
                    android:id="@+id/classType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/rankedStates"
                    android:layout_below="@+id/modesTable"
                    android:text="分类" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/modesTable"
                    android:layout_below="@id/classType"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/hot"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="热门" />

                    <RadioButton
                        android:id="@+id/latest"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:checked="true"
                        android:text="最新" />

                </LinearLayout>

            </RelativeLayout>
        </RelativeLayout>


    </android.support.v7.widget.CardView>

    <View
        android:id="@+id/view5"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@+id/searchLayout"
        android:alpha="50"
        android:background="@drawable/shadow"
        android:visibility="gone" />

</RelativeLayout>